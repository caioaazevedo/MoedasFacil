<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ConversaoActivity">

    <TextView
            android:id="@+id/textTituloMenuConversao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converter"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

    <View
            android:layout_width="170dp"
            android:layout_height="7dp"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_below="@id/textTituloMenuConversao"/>


    <Button
            android:id="@+id/buttonMenuConversaoReal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Real"
            android:textSize="23sp"
            android:textColor="@color/colorTextButton"
            android:layout_below="@id/textTituloMenuConversao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_corner_button2"/>

    <Button
            android:id="@+id/buttonMenuConversaoOutra"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Outra"
            android:textSize="23sp"
            android:textColor="@color/colorTextButton"
            android:layout_below="@id/buttonMenuConversaoReal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/round_corner_button2"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Caio Azevedo"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
</RelativeLayout>