<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConversaoRealActivity">

    <TextView
            android:id="@+id/textTituloConversaoReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConversÃ£o"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
    <View
            android:layout_width="190dp"
            android:layout_height="5dp"
            android:background="@color/colorLigthGreen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textTituloConversaoReal"/>
    <TextView
            android:id="@+id/textTituloEscolha1Real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converter:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_below="@id/textTituloConversaoReal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"/>

    <TextView
            android:id="@+id/textTituloReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real (R$)"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:layout_alignBaseline="@id/textTituloEscolha1Real"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"/>

    <TextView
            android:id="@+id/textTituloEscolha2Real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_below="@id/textTituloEscolha1Real"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"/>
    <Spinner
            android:id="@+id/spinMoedaReal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloEscolha1Real"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignBaseline="@id/textTituloEscolha2Real">
    </Spinner>
    <TextView
            android:id="@+id/textValorConversaoReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite o valor:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_below="@id/spinMoedaReal"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>
    <View
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@color/colorLigthGreen"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textValorConversaoReal"/>
    <EditText
            android:id="@+id/editConversaoReal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="Valor..."
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textValorConversaoReal"/>
    <TextView
            android:id="@+id/textTituloResultadoReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/editConversaoReal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
    <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/colorLigthGreen"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/textTituloResultadoReal"
            android:layout_below="@id/textTituloResultadoReal"/>
    <TextView
            android:id="@+id/textResultadoConversao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTituloResultadoReal"
            android:layout_marginTop="25dp"/>
    <Button
            android:id="@+id/buttonConversaoReal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="20sp"
            android:textColor="@color/colorTextButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_button"/>
</RelativeLayout>