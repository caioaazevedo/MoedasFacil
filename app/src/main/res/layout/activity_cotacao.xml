<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.CotacaoActivity">

    <TextView
            android:id="@+id/textTituloCotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cotação"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

    <View
            android:layout_width="180dp"
            android:layout_height="5dp"
            android:background="@color/colorLigthGreen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textTituloCotacao"/>

    <TextView
            android:id="@+id/textTituloEscolha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definir Moeda:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp"
            android:layout_below="@id/textTituloCotacao"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"/>

    <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/colorGreenYellow"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/textTituloEscolha"
            android:layout_below="@id/textTituloEscolha"/>

    <Spinner
            android:id="@+id/spinMoeda"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloEscolha"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:padding="15dp">

    </Spinner>

    <TextView
            android:id="@+id/textTituloCotacao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cotação Moeda:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp"
            android:layout_below="@id/spinMoeda"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

    <View
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:background="@color/colorGreenYellow"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/textTituloCotacao2"
            android:layout_below="@id/textTituloCotacao2"/>

    <TextView
            android:id="@+id/textCotacaoMoeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="23sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/textTituloCotacao2"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="45dp"/>

    <Button
            android:id="@+id/buttonCotacaoMoeda"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="20sp"
            android:textColor="@color/colorTextButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_button"/>

</RelativeLayout>