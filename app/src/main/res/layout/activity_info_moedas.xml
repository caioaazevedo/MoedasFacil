<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoMoedasActivity">

    <TextView
            android:id="@+id/textTituloInfoMoeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

    <View
            android:layout_width="220dp"
            android:layout_height="7dp"
            android:background="@color/colorGreenYellow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_below="@id/textTituloInfoMoeda"/>

    <ImageView
            android:id="@+id/imageInfo"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:src="@drawable/bandeira_brasil"
            android:layout_below="@id/textTituloInfoMoeda"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textInfoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="25sp"
            android:layout_below="@id/imageInfo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    <TextView
            android:id="@+id/textInfoSimbolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Símbolo:"
            android:textSize="25sp"
            android:layout_below="@id/textInfoNome"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    <TextView
            android:id="@+id/textInfoCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cógido:"
            android:textSize="25sp"
            android:layout_below="@id/textInfoSimbolo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    <TextView
            android:id="@+id/textInfoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:textSize="25sp"
            android:layout_below="@id/textInfoCodigo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

</RelativeLayout>